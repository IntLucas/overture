class A
instance variables
 public predA : nat := 0
operations
 public opA : () ==> ()
 opA () == skip;

sync
 per opA => predA = 0;
end A

class B is subclass of A
instance variables
 public predB : nat := 1;
operations
 public  opB : () ==> ()
 opB () == skip;
 
 public opA : () ==> ()
 opA () == skip;
sync
 per opB => predB = 1; 
end B

class C is subclass of B
instance variables
 public predC : nat := 2;
operations
 public opC : () ==> ()
 opC () == skip;

sync
	per opA => predC = 2;
end C