<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>

		<groupId>org.overturetool</groupId>
		<artifactId>core</artifactId>
		<version>2.1.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overturetool.core</groupId>
	<artifactId>ast</artifactId>
	<version>2.2.0</version>
	<name>The Overture Abstract Syntax</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.overturetool.tools</groupId>
				<artifactId>astcreatorplugin</artifactId>
				<version>1.0.1</version>
				<executions>
					<execution>
						<id>java</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>astcreate</goal>

						</goals>
					</execution>
				</executions>
				<configuration>
				<folderToDeletePreGenerate>org/overture/ast</folderToDeletePreGenerate>
					<ast>overtureII.astv2</ast>
					<names>
						<param>VDM</param>
					</names>

				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
