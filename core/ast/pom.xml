<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>

		<groupId>org.overturetoolv2</groupId>
		<artifactId>corev2</artifactId>
		<version>2.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overturetoolv2.core</groupId>
	<artifactId>astv_2</artifactId>
	<version>2.0.1</version>
	<name>The Overture Abstract Syntax</name>
	<build>
		<plugins>
			<!--plugin> <groupId>org.overturetool.tools</groupId> <artifactId>vdmt</artifactId> 
				<configuration> <excludePackages> </excludePackages> <excludeClasses> </excludeClasses> 
				<importPackages> </importPackages> </configuration> </plugin -->
			<plugin>
				<groupId>org.overturetoolv2.tools</groupId>
				<artifactId>astcreatorplugin</artifactId>
				<version>1.0.0</version>
				<executions>
					<execution>
						<id>java</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>astcreate</goal>

						</goals>
					</execution>
				</executions>
				<configuration>
				<folderToDeletePreGenerate>org/overture/ast</folderToDeletePreGenerate>
					<asts>
						<param>overtureII.astv2</param>
					</asts>
					<names>
						<param>VDM</param>
					</names>

				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
