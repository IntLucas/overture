<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 <extension
         point="org.eclipse.ui.editors">
      
      <editor
            class="org.overture.ide.plugins.externaleditor.VdmExternalEditorImpl"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            icon="icons/cview16/vdm_external_file_tsk.gif"
            id="org.overture.ide.vdmsl.ui.VdmExternalEditor"
            name="Vdm External Editor">
         <contentTypeBinding
               contentTypeId="org.overture.ide.vdm.external.content-type">
         </contentTypeBinding>
      </editor>
   </extension>
   
 <!-- Enables double click on ruler for breakpoint creation -->
     <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="org.overture.ide.vdmsl.ui.VdmExternalEditor"
            id="org.overture.ide.debug.VdmExternalEditor.BreakpointRulerActions">
         <action
               actionID="RulerDoubleClick"
               class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate"
               id="org.overture.ide.debug.ui.actions.ExternalManageBreakpointRulerAction"
               label="%AddBreakpoint.label"
               style="toggle">
         </action>
         
      </editorContribution>
    </extension>

</plugin>
